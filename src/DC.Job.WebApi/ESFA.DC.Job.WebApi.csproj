<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <AssemblyName>ESFA.DC.Job.WebApi</AssemblyName>
    <RootNamespace>ESFA.DC.Job.WebApi</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <CodeAnalysisRuleSet>DC.Job.WebApi.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <CodeAnalysisRuleSet>DC.Job.WebApi.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Extensions\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="autofac" Version="4.8.0" />
    <PackageReference Include="Autofac.Configuration" Version="4.0.1" />
    <PackageReference Include="Autofac.Extensions.DependencyInjection" Version="4.2.2" />
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.5" />
    <PackageReference Include="Microsoft.EntityFrameworkcore" Version="2.0.2" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="2.0.2" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="2.0.2" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="ESFA.DC.JobQueueManager">
      <HintPath>..\..\..\DC-JobQueueManager\src\DC.JobQueueManager\bin\Debug\netstandard2.0\ESFA.DC.JobQueueManager.dll</HintPath>
    </Reference>
    <Reference Include="ESFA.DC.JobQueueManager.Data">
      <HintPath>..\..\..\DC-JobQueueManager\src\DC.JobQueueManager\bin\Debug\netstandard2.0\ESFA.DC.JobQueueManager.Data.dll</HintPath>
    </Reference>
    <Reference Include="ESFA.DC.JobQueueManager.Interfaces">
      <HintPath>..\..\..\DC-JobQueueManager\src\DC.JobQueueManager\bin\Debug\netstandard2.0\ESFA.DC.JobQueueManager.Interfaces.dll</HintPath>
    </Reference>
    <Reference Include="ESFA.DC.JobQueueManager.Models">
      <HintPath>..\..\..\DC-JobQueueManager\src\DC.JobQueueManager\bin\Debug\netstandard2.0\ESFA.DC.JobQueueManager.Models.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Content Update="appsettings.salman.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="powershell -NoProfile -ExecutionPolicy RemoteSigned -file $(ProjectDir)Scripts\settings.ps1 $(ProjectDir)" />
  </Target>

</Project>
